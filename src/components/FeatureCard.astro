---
export interface Props {
  title: string
  description: string
  icon: string
}

const { title, description, icon } = Astro.props
---

<div
  class="rounded-card bg-white p-4 text-center transition-shadow duration-300 hover:shadow-lg md:p-6 lg:p-8"
>
  <!-- 图标 -->
  <div class="mb-3 flex justify-center md:mb-4 lg:mb-5">
    <div
      class="flex h-10 w-10 items-center justify-center md:h-14 md:w-14 lg:h-16 lg:w-16"
    >
      <svg
        class="h-full w-full text-primary"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
      >
        {
          icon === 'globe' && (
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"
            />
          )
        }
        {
          icon === 'server' && (
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d="M4 6h16M4 12h16M4 18h16M6 6v12M18 6v12"
            />
          )
        }
        {
          icon === 'shield' && (
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d="M12 2L4 6v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V6l-8-4z"
            />
          )
        }
        {
          icon === 'lock' && (
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d="M12 1v6m0 6v6m6-12h-6m-6 0h6m6 6h-6m-6 0h6"
            />
          )
        }
      </svg>
    </div>
  </div>

  <!-- 标题 -->
  <h4 class="text-heading-3 mb-2 md:mb-3 lg:mb-4">
    {title}
  </h4>

  <!-- 描述 -->
  <p class="text-body-md leading-relaxed text-dark/70">
    {description}
  </p>
</div>
