---
/**
 * 行业认可区块组件
 *
 * @description 展示公司获得的行业奖项和认可
 */

const awards = [
  {
    organization: 'Global Business & Finance Magazine',
    title: '2024最佳金融科技创新奖',
    year: '2024',
  },
  {
    organization: 'International Finance Magazine',
    title: '2025年度最佳技术实践公司',
    year: '2025',
  },
]
---

<!-- 行业认可区块 -->
<section class="bg-white py-16 md:py-20 lg:py-28">
  <div class="content-container">
    <div class="grid grid-cols-1 gap-10 lg:grid-cols-2 lg:gap-16">
      <!-- 左侧：标题和描述 -->
      <div class="flex flex-col justify-center">
        <h2
          class="mb-5 text-[36px] font-bold leading-tight text-dark md:mb-6 md:text-[46px] lg:text-[58px]"
        >
          行业认可
        </h2>
        <p
          class="text-[15px] leading-relaxed text-dark/75 md:text-[17px] lg:text-[19px]"
        >
          我们凭借卓越的技术实力和严格的公司治理，获得了行业内的广泛认可：
        </p>
      </div>
      <!-- 右侧：奖项列表 -->
      <div class="space-y-5">
        {
          awards.map((award) => (
            <div class="group rounded-xl border border-gray-100 bg-gradient-to-br from-white to-gray-50 p-6 shadow-sm transition-all hover:shadow-lg lg:p-7">
              <div class="mb-5 flex justify-center">
                <div class="flex h-14 w-14 items-center justify-center rounded-full bg-gradient-to-br from-primary/10 to-primary/5 transition-transform group-hover:scale-110">
                  <svg
                    class="h-7 w-7 text-primary"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path d="M12 2L9.19 8.63L2 9.24L7.46 13.97L5.82 21L12 17.27L18.18 21L16.54 13.97L22 9.24L14.81 8.63L12 2Z" />
                  </svg>
                </div>
              </div>

              <p class="mb-4 text-center text-[14px] leading-relaxed text-dark/65 md:text-[15px] lg:text-[16px]">
                {award.organization}
              </p>

              <div class="mb-4 h-px bg-gradient-to-r from-transparent via-gray-200 to-transparent" />

              <h3 class="text-center text-[15px] font-bold text-dark md:text-[17px] lg:text-[19px]">
                {award.title}
              </h3>

              {award.year && (
                <div class="mt-4 flex justify-center">
                  <span class="rounded-full bg-primary/10 px-4 py-1.5 text-[13px] font-semibold text-primary">
                    {award.year}
                  </span>
                </div>
              )}
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
