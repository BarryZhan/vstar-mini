---
import { Image } from 'astro:assets'
/**
 * 价值观卡片组件
 *
 * @description 展示单个核心价值观，支持多种布局样式
 */

interface Props {
  /** 价值观标题 */
  title: string
  /** 价值观描述 */
  description: string
  /** 背景图片（用于底部背景） */
  bgImage: ImageMetadata
}

const { title, description, bgImage } = Astro.props
---

<div class="group relative h-[270px] overflow-hidden rounded-[18px]">
  <Image
    src={bgImage}
    alt=""
    class="absolute h-full w-full object-cover transition-transform duration-500 ease-out group-hover:scale-110"
    loading="lazy"
  />
  <div class="relative p-6">
    <h3 class="text-body-xl mb-2 font-bold text-light">
      {title}
    </h3>
    <p class="text-body-md text-light-text">
      {description}
    </p>
  </div>
</div>
