---
/**
 * 团队成员卡片组件
 *
 * @description 展示单个团队成员的信息，包含头像、姓名、职位和简介
 */

interface Props {
  /** 成员姓名 */
  name: string
  /** 成员职位 */
  position: string
  /** 成员简介 */
  bio: string
  /** 头像图片 URL */
  avatar?: string
}

const { name, position, bio, avatar } = Astro.props
---

<div class="flex flex-col items-center text-center">
  <!-- 头像 -->
  <div
    class="group mb-6 h-[140px] w-[140px] overflow-hidden rounded-full shadow-2xl ring-4 ring-white/20 transition-all hover:ring-primary/30 md:h-[170px] md:w-[170px] lg:mb-8 lg:h-[189px] lg:w-[189px]"
  >
    {
      avatar ? (
        <img
          src={avatar}
          alt={name}
          class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-110"
          loading="lazy"
        />
      ) : (
        <div class="flex h-full w-full items-center justify-center bg-gradient-to-br from-primary/15 to-primary/30">
          <svg
            class="h-20 w-20 text-white/50"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
          </svg>
        </div>
      )
    }
  </div>

  <!-- 姓名和职位 -->
  <h3
    class="mb-4 text-[17px] font-bold text-white md:text-[22px] lg:mb-6 lg:text-[28px]"
  >
    {name}
    <span class="text-white/60">|</span>
    {position}
  </h3>

  <!-- 简介 -->
  <p
    class="max-w-[485px] text-[13px] leading-relaxed text-light-text/80 md:text-[15px] lg:text-[17px]"
  >
    {bio}
  </p>
</div>
