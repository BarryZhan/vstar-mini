---
import { Image } from 'astro:assets'
import MapImage from '../../assets/about/map.png'
/**
 * 发展历程时间轴组件
 *
 * @description 展示公司发展的关键时间节点，使用曲线连接
 */

import TimelineNode from './TimelineNode.astro'

const milestones = [
  {
    time: '2018',
    title: 'VS金融集团在澳大利亚墨尔本成立',
    position: 'right' as const,
  },
  {
    time: '2020.03',
    title: 'VSTAR品牌正式创立',
    position: 'left' as const,
  },
  {
    time: '2021.06',
    title: '获得塞浦路斯CySEC授权，深化欧盟市场布局',
    position: 'right' as const,
  },
  {
    time: '2022.09',
    title: '全球员工数量突破300人，技术团队占比超过40%',
    position: 'left' as const,
  },
  {
    time: '2023.01',
    title: '通过ISO/IEC 27001:2013信息安全管理体系认证',
    position: 'right' as const,
  },
  {
    time: '2024.05',
    title: '收购澳大利亚VSTAR Finance Pty Ltd，获得ASIC AFSL 526187牌照',
    position: 'left' as const,
  },
  {
    time: '2024.10',
    title: '荣获"最佳金融科技创新奖"；全球办事处数量增至7个',
    position: 'right' as const,
  },
  {
    time: '2025.05',
    title: 'VSTAR荣获欧盟MiCA框架下VASP牌照',
    position: 'left' as const,
  },
]
---

<!-- 发展历程区块 -->
<section class="relative overflow-hidden bg-white py-16 md:py-20 lg:py-24">
  <div class="content-container">
    <!-- 标题 -->
    <h2
      class="mb-12 text-center text-[30px] font-medium leading-tight text-dark md:mb-16 md:text-[36px]"
    >
      发展历程
    </h2>

    <Image src={MapImage} class="hidden md:block" alt="" />
    <!-- 时间轴容器 -->
    <div class="relative mx-auto max-w-2xl px-4 md:hidden md:px-6 lg:px-8">
      <!-- 垂直时间轴线 - 居中显示 -->
      <div
        class="absolute left-1/2 top-0 h-full w-0.5 -translate-x-1/2 bg-[#474747]"
      >
      </div>

      <!-- 顶部装饰 - 居中显示 -->
      <div class="absolute left-1/2 top-0">
        <svg
          width="20"
          height="25"
          viewBox="0 0 20 25"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path d="M0 25V0L20 10.8696L0 25Z" fill="#474747"></path>
        </svg>
      </div>

      <!-- 时间轴节点列表 -->
      <div class="relative space-y-12 pb-8 pt-6 md:space-y-16 md:pt-8">
        {
          milestones.map((milestone, index) => (
            <TimelineNode
              time={milestone.time}
              title={milestone.title}
              position={milestone.position}
              isLast={index === milestones.length - 1}
            />
          ))
        }
      </div>
    </div>
  </div>
</section>
