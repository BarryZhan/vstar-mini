---
// 页脚组件
const footerLinks = {
  column1: [
    { label: '关于我们', href: '#', highlight: true },
    { label: '全球合规', href: '#' },
    { label: '技术实力', href: '#' },
  ],
  column2: [
    { label: '隐私政策', href: '#' },
    { label: '公司新闻', href: '#' },
    { label: '联系我们', href: '/contact' },
  ],
  column3: [
    { label: '公众号', href: '#' },
    { label: '最新动态', href: '#' },
    { label: '应用下载', href: '#' },
  ],
}
---

<footer
  class="rounded-footer mt-16 bg-dark px-6 py-12 md:mt-24 md:px-12 md:py-16 lg:px-20 lg:py-20"
>
  <div class="container mx-auto max-w-[1440px]">
    <!-- Logo 和邮箱 -->
    <div
      class="mb-12 flex flex-col items-start justify-between gap-4 md:mb-16 md:flex-row md:items-start md:gap-6 lg:mb-20"
    >
      <div class="flex w-full items-center justify-between">
        <h2
          class="font-display text-2xl font-bold text-white md:text-3xl lg:text-[36px]"
        >
          VS TRADER
        </h2>
        <a
          href="mailto:support@vstar.com"
          class="block text-base text-white transition-colors hover:text-primary md:text-lg lg:text-[22px]"
        >
          support@vstar.com
        </a>
      </div>
    </div>

    <!-- 链接导航 -->
    <div
      class="mb-12 ml-auto flex max-w-4xl justify-between gap-8 text-xs md:mb-16 md:gap-12 md:text-lg lg:mb-20 lg:gap-44 lg:text-[22px]"
    >
      {
        [footerLinks.column1, footerLinks.column2, footerLinks.column3].map(
          (links, index, list) => (
            <div
              class={`w-max space-y-4 md:space-y-6 lg:space-y-10 ${index === list.length - 1 ? 'text-right' : ''}`}
            >
              {links.map((link) => (
                <a
                  href={link.href}
                  class={`block leading-relaxed text-white transition-colors hover:text-primary`}
                >
                  {link.label}
                </a>
              ))}
            </div>
          ),
        )
      }
    </div>

    <!-- 分隔线 -->
    <div class="mb-8 border-t border-white/10 md:mb-10"></div>

    <!-- 版权信息 -->
    <div
      class="md:text-md text-center text-xs leading-relaxed text-white/60 lg:text-base"
    >
      <p>
        © 2018-2025 VSTAR 版权所有 | 联系我们：support@vstar.com |
        ICP备：粤2025447329号-1 | 网安备：粤公网安备1101054365773
      </p>
    </div>
  </div>
</footer>
