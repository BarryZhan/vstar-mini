---
// 页脚组件
const footerLinks = {
  column1: [
    { label: '关于我们', href: '#', highlight: true },
    { label: '全球合规', href: '#' },
    { label: '技术实力', href: '#' },
  ],
  column2: [
    { label: '隐私政策', href: '#' },
    { label: '公司新闻', href: '#' },
    { label: '联系我们', href: '/contact' },
  ],
  column3: [
    { label: '公众号', href: '#' },
    { label: '最新动态', href: '#' },
    { label: '应用下载', href: '#' },
  ],
}
---

<footer class="rounded-footer bg-dark py-12 md:py-16 lg:py-20">
  <div class="content-container">
    <div class="lg:flex lg:gap-20">
      <!-- Logo 和邮箱 -->
      <div
        class="mb-12 flex justify-between gap-4 md:mb-16 md:gap-6 lg:mb-20 lg:flex-1 lg:flex-col lg:justify-start"
      >
        <h2
          class="font-display text-2xl font-bold text-white md:text-3xl lg:text-[36px]"
        >
          VS TRADER
        </h2>
        <a
          href="mailto:support@vstar.com"
          class="block text-base text-white transition-colors hover:text-primary md:text-lg lg:text-[22px]"
        >
          support@vstar.com
        </a>
      </div>

      <!-- 链接导航 -->
      <div
        class="text-body-sm mb-12 ml-auto flex min-w-0 flex-1 justify-between gap-8 md:mb-16 md:gap-12 lg:mb-20 lg:max-w-2xl"
      >
        {
          [footerLinks.column1, footerLinks.column2, footerLinks.column3].map(
            (links, index, list) => (
              <div
                class={`w-max space-y-4 md:space-y-6 lg:space-y-10 ${index === list.length - 1 ? 'text-right' : ''}`}
              >
                {links.map((link) => (
                  <a
                    href={link.href}
                    class={`block text-light-text transition-colors hover:text-light`}
                  >
                    {link.label}
                  </a>
                ))}
              </div>
            ),
          )
        }
      </div>
    </div>

    <!-- 分隔线 -->
    <div class="mb-8 border-t border-white/10 md:mb-10"></div>

    <!-- 版权信息 -->
    <div class="text-body-xs text-center text-light-text">
      <p>
        © 2018-2025 VSTAR 版权所有 | 联系我们：support@vstar.com |
        ICP备：粤2025447329号-1 | 网安备：粤公网安备1101054365773
      </p>
    </div>
  </div>
</footer>
