---
import StatCard from '../StatCard.astro'
import { Image } from 'astro:assets'
import technologyImg from '../../assets/technology-img.png'

// 技术指标数据
const stats = [
  {
    icon: 'calendar',
    label: '订单执行速度',
    value: '平均102.5ms\n(行业领先)',
  },
  {
    icon: 'percent',
    label: '系统可用性',
    value: '99.99%',
  },
  {
    icon: 'chart',
    label: '并发处理能力',
    value: '10,000+ TPS',
  },
]
---

<section
  class="rounded-section section-margin bg-gradient-to-r relative lg:h-[490px] xl:h-[560px] lg:bg-none lg:bg-[#000818] from-dark via-dark-900 to-dark pt-14 pb-10 md:py-16 xl:py-24"
>
  <div class="content-container">
    <h2 class="text-heading-1 text-white">技术指标</h2>

    <!-- 统计卡片与图片 -->
    <div
      class="grid grid-cols-3 lg:flex md:gap-8 xl:gap-24  lg:mt-20 my-12 lg:max-w-[600px] relative z-10"
    >
      {stats.map((stat) => <StatCard {...stat} />)}


    </div>
    <Image src={technologyImg} alt="" class="w-full object-contain  top-0 lg:w-auto lg:h-[400px] xl:h-[500px] lg:right-0 xl:right-10 lg:absolute" />
  </div>
</section>
