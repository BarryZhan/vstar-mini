---
import Button from '../Button.astro'

// 技术特性数据
const features = [
  { title: '毫秒级延迟', description: '超低延迟交易执行，让您不错过任何机会' },
  { title: '99.99% 可用性', description: '企业级基础设施保障系统稳定运行' },
  { title: '智能路由', description: '自动选择最优交易路径和流动性来源' },
  { title: '实时监控', description: '7x24小时系统监控和技术支持' },
]
---

<section
  class="relative overflow-hidden rounded-[32px] bg-gradient-to-r from-dark via-dark-900 to-dark md:rounded-[48px] lg:rounded-[64px]"
>
  <!-- 背景装饰 -->
  <div class="absolute inset-0 opacity-20">
    <div
      class="absolute right-0 top-0 h-64 w-64 rounded-full bg-primary blur-3xl md:h-96 md:w-96"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 h-64 w-64 rounded-full bg-blue-500 blur-3xl md:h-96 md:w-96"
    >
    </div>
  </div>

  <div class="relative px-4 py-12 md:px-8 md:py-16 lg:px-12 lg:py-24">
    <div
      class="grid grid-cols-1 items-center gap-8 md:gap-12 lg:grid-cols-2 lg:gap-16"
    >
      <!-- 左侧：3D 设备图 -->
      <div class="relative order-2 lg:order-1">
        <!-- 3D 设备占位 -->
        <div
          class="relative z-10 mx-auto aspect-square max-w-[280px] md:max-w-md"
        >
          <div
            class="flex h-full w-full items-center justify-center rounded-2xl border border-white/10 bg-gradient-to-br from-primary/30 to-blue-500/30 backdrop-blur-sm md:rounded-3xl"
          >
            <div class="text-center">
              <svg
                class="mx-auto mb-3 h-20 w-20 text-white/30 md:mb-4 md:h-28 md:w-28 lg:h-32 lg:w-32"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1"
                  d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
              <p class="text-xs text-white/50 md:text-sm">核心技术可视化</p>
            </div>
          </div>
        </div>

        <!-- 装饰光效 -->
        <div class="absolute inset-0 -z-10">
          <div
            class="absolute left-1/2 top-1/2 h-full w-full -translate-x-1/2 -translate-y-1/2 animate-pulse rounded-full bg-primary/20 blur-3xl"
          >
          </div>
        </div>
      </div>

      <!-- 右侧：文字内容 -->
      <div class="order-1 lg:order-2">
        <h2
          class="md:text-heading-1 mb-4 text-[26px] text-white md:mb-6 lg:mb-8"
        >
          超低延迟交易核心
        </h2>

        <p
          class="text-description mb-6 text-base leading-relaxed md:mb-8 md:text-lg lg:mb-10"
        >
          采用最新的交易技术架构，通过全球分布式节点和智能路由系统，
          为您提供毫秒级的订单执行速度和极致的交易体验
        </p>

        <!-- 特性列表 -->
        <div class="mb-6 space-y-3 md:mb-8 md:space-y-4 lg:mb-10">
          {
            features.map((feature) => (
              <div class="flex items-start gap-3 rounded-lg border border-white/10 bg-white/5 p-3 backdrop-blur-sm md:gap-4 md:p-4">
                <div class="mt-0.5 flex h-7 w-7 shrink-0 items-center justify-center rounded-lg bg-primary/20 md:h-8 md:w-8">
                  <svg
                    class="h-4 w-4 text-primary md:h-5 md:w-5"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"
                    />
                  </svg>
                </div>
                <div>
                  <h4 class="text-body-md md:text-body-lg mb-0.5 font-semibold text-white md:mb-1">
                    {feature.title}
                  </h4>
                  <p class="text-body-sm md:text-body-md text-white/70">
                    {feature.description}
                  </p>
                </div>
              </div>
            ))
          }
        </div>

        <Button variant="primary" size="md"> 了解更多 </Button>
      </div>
    </div>
  </div>
</section>
