---
// 最新动态区域

const news = [
  {
    title: '拿下欧盟"通行证"！VSTAR获VASP牌照迈向全球服务新布局',
    image: '/images/news-1.jpg', // 需要添加实际图片
  },
  {
    title: '维信证劵已获得澳洲金融许可牌照，开启全球金融新征程！',
    image: '/images/news-2.jpg', // 需要添加实际图片
  },
]
---

<section class="bg-gradient-to-b from-black to-gray-900 px-6 py-16">
  <div class="mx-auto max-w-md">
    <!-- 标题 -->
    <h2 class="mb-8 text-center text-[30px] font-normal text-white">
      最新动态
    </h2>

    <!-- 新闻卡片 -->
    <div class="flex flex-col gap-6">
      {
        news.map((item) => (
          <article class="overflow-hidden rounded-2xl bg-white shadow-lg transition-transform hover:scale-[1.02]">
            {/* 图片区域 */}
            <div class="h-56 w-full bg-gradient-to-br from-gray-200 to-gray-300">
              {/* 占位背景，实际应该用 <Image> 组件 */}
              <div class="flex h-full w-full items-center justify-center text-gray-400">
                <svg
                  class="h-20 w-20"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                  />
                </svg>
              </div>
            </div>

            {/* 内容区域 */}
            <div class="p-6">
              <h3 class="text-base font-normal leading-relaxed text-black">
                {item.title}
              </h3>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>
