---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'
export interface Props {
  icon: ImageMetadata
  title: string
  description: string
}

const { icon, title, description } = Astro.props
---

<div
  class="md:rounded-card group rounded-lg bg-light-bg p-4 transition-all duration-300 hover:shadow-lg md:p-6 lg:p-8"
>
  <!-- 图标 -->
  <div
    class="mb-3 flex h-10 w-10 transition-all duration-300 group-hover:scale-110 md:mb-4 md:h-12 md:w-12 lg:mb-5 lg:h-14 lg:w-14"
  >
    <Image
      src={icon}
      alt={title}
      width={80}
      height={80}
      class="h-full w-full object-cover"
    />
  </div>

  <!-- 标题 -->
  <h3
    class="md:text-heading-3 mb-2 text-[18px] transition-colors duration-300 group-hover:text-primary md:mb-3"
  >
    {title}
  </h3>

  <!-- 描述 -->
  <p class="text-body-sm md:text-body-md leading-relaxed text-dark/70">
    {description}
  </p>
</div>
