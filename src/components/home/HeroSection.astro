---
import Button from '../Button.astro'

// 特性标签数据
const features = [
  { icon: 'shield', text: '全球监管' },
  { icon: 'globe', text: '多语言支持' },
  { icon: 'clock', text: '7×24客服' },
  { icon: 'lock', text: '安全可靠' },
]
---

<section
  class="rounded-header relative overflow-hidden bg-gradient-to-r from-dark via-dark-900 to-dark pb-12 md:pb-16 lg:pb-24"
>
  <!-- 背景装饰 -->
  <div class="absolute inset-0 opacity-10">
    <div
      class="absolute right-10 top-10 h-64 w-64 rounded-full bg-primary blur-3xl md:right-20 md:top-20 md:h-96 md:w-96"
    >
    </div>
    <div
      class="absolute bottom-10 left-10 h-64 w-64 rounded-full bg-blue-400 blur-3xl md:bottom-20 md:left-20 md:h-96 md:w-96"
    >
    </div>
  </div>

  <div class="relative">
    <!-- 主标题区域 -->
    <div
      class="mx-auto max-w-4xl px-4 pb-8 pt-16 text-center md:px-6 md:pb-12 md:pt-24 lg:pb-16 lg:pt-32"
    >
      <!-- 小标题 -->
      <div class="mb-3 inline-block md:mb-4 lg:mb-6">
        <span
          class="text-body-xs md:text-body-sm rounded-full bg-primary/10 px-3 py-1.5 text-primary md:px-4 md:py-2"
        >
          VS TRADER
        </span>
      </div>

      <!-- 主标题 -->
      <h1
        class="md:text-heading-hero mb-4 text-[32px] leading-tight text-white md:mb-6 lg:mb-8"
      >
        链接第一抓机遇
      </h1>

      <!-- 描述 -->
      <p
        class="text-description mx-auto mb-6 max-w-2xl text-base leading-relaxed md:mb-8 md:text-lg lg:mb-12 lg:text-xl"
      >
        我们为全球交易者提供先进的科技服务，结合创新技术与专业支持，
        助您把握每一个市场机遇
      </p>

      <!-- CTA 按钮 -->
      <Button variant="primary" size="lg"> 立即体验 </Button>
    </div>

    <!-- 特性标签 -->
    <div class="mx-auto max-w-5xl px-4 pb-8 md:px-6 md:pb-12 lg:pb-16">
      <div class="grid grid-cols-2 gap-3 md:grid-cols-4 md:gap-4 lg:gap-6">
        {
          features.map((feature) => (
            <div class="md:rounded-card rounded-lg border border-white/10 bg-white/5 p-3 backdrop-blur-sm transition-all duration-300 hover:bg-white/10 md:p-4 lg:p-6">
              <div class="flex flex-col items-center gap-2 md:flex-row md:gap-3">
                <div class="flex h-8 w-8 shrink-0 items-center justify-center rounded-lg bg-primary/20 md:h-10 md:w-10 lg:h-12 lg:w-12">
                  <svg
                    class="h-4 w-4 text-primary md:h-5 md:w-5 lg:h-6 lg:w-6"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                  >
                    {feature.icon === 'shield' && (
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                      />
                    )}
                    {feature.icon === 'globe' && (
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                      />
                    )}
                    {feature.icon === 'clock' && (
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                      />
                    )}
                    {feature.icon === 'lock' && (
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                      />
                    )}
                  </svg>
                </div>

                <span class="text-body-sm md:text-body-md lg:text-body-lg text-center font-medium text-white md:text-left">
                  {feature.text}
                </span>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
