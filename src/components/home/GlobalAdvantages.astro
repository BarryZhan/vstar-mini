---
import AdvantageCard from './AdvantageCard.astro'
import UserInterfaceIcon from '../../assets/home/icon-user-interface.png'
import AccessibilityIcon from '../../assets/home/icon-accessibility.png'
import SecurityIcon from '../../assets/home/icon-security.png'
import RealtimeQuotesIcon from '../../assets/home/icon-realtime-quotes.png'
import PerformanceIcon from '../../assets/home/icon-performance.png'
import MonitoringIcon from '../../assets/home/icon-monitoring.png'

// 优势数据
const advantages = [
  {
    icon: UserInterfaceIcon,
    title: '简单友好界面',
    description:
      'A clean and intuitive interface designed for smooth user interaction, making every operation straightforward and efficient.',
  },
  {
    icon: AccessibilityIcon,
    title: '随时随地使用',
    description:
      'Seamless access across devices, allowing you to stay connected and manage actions anytime, anywhere.',
  },
  {
    icon: SecurityIcon,
    title: '集合多层级安全技术',
    description:
      'Built with multi-layered security protocols to safeguard your data and ensure a stable environment.',
  },
  {
    icon: RealtimeQuotesIcon,
    title: '实时无延时报价',
    description:
      'Instant updates with minimal latency, keeping information accurate and always up to date.',
  },
  {
    icon: PerformanceIcon,
    title: '快速高效的执行',
    description:
      'Optimized system performance ensures fast and reliable execution for a smoother experience.',
  },
  {
    icon: MonitoringIcon,
    title: '快速高效的执行',
    description:
      'Real-time monitoring tools that let you track and manage your positions with ease and flexibility.',
  },
]
---

<section class="page-main bg-white">
  <!-- 标题 -->
  <h2 class="section-title mb-8 md:mb-12 lg:mb-16">全新体验</h2>

  <!-- 优势卡片网格 -->
  <div
    class="grid grid-cols-1 gap-4 md:grid-cols-2 md:gap-6 lg:grid-cols-3 lg:gap-8"
  >
    {advantages.map((advantage) => <AdvantageCard {...advantage} />)}
  </div>
</section>
