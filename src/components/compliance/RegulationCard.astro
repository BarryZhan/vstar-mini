---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'
/**
 * 监管卡片组件
 *
 * @description 展示监管机构信息，包括标志、标题、状态标签和描述
 * @example
 * <RegulationCard
 *   title="澳大利亚证券与投资委员会(ASIC)监管"
 *   status="已获授权监管"
 *   description="澳大利亚: VSTAR Finance Pty Ltd (AFSL 526187) 受澳大利亚证券与投资委员会(ASIC)监管..."
 *   logo="/path/to/logo.png"
 * />
 */

interface Props {
  /** 卡片标题 */
  title: string
  /** 监管状态 */
  name: string
  /** 描述文字 */
  description: string
  /** 监管机构标志图片路径 */
  logo: ImageMetadata
  /** 标志的alt文字 */
  logoAlt?: string
}

const { title, name, description, logo, logoAlt = '监管机构标志' } = Astro.props
---

<div
  class="rounded-card relative flex h-[341px] flex-col bg-light-bg p-6 md:p-8 lg:h-auto lg:rounded-[40px] lg:p-12"
>
  <div class="mb-6 flex items-center justify-between md:mb-8 lg:mb-10">
    <Image
      src={logo}
      alt={logoAlt}
      class="size-[66px] object-contain lg:size-27"
    />
    <div
      class="flex h-7 items-center rounded-full border border-primary/20 bg-[#f0f5fe] px-6 md:h-10 md:px-7 lg:h-11 lg:px-8"
    >
      <span
        class="whitespace-nowrap text-xs font-medium leading-none text-primary md:text-sm lg:text-[18px]"
      >
        已获授权监管
      </span>
    </div>
  </div>

  <!-- 卡片标题 -->
  <h3
    class="mb-auto text-[18px] font-black text-black md:text-[24px] lg:mb-11 lg:text-[32px]"
  >
    {title}
  </h3>

  <!-- 描述内容 -->
  <div class="text-body-md text-black">
    <p class="font-bold">{name}</p>
    <p>{description}</p>
  </div>
</div>
