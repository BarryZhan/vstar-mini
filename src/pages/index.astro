---
import Layout from '../layouts/Layout.astro'
import Navigation from '../components/Navigation.astro'
import Footer from '../components/Footer.astro'
import HeroSection from '../components/home/HeroSection.astro'
import ProductShowcase from '../components/home/ProductShowcase.astro'
import GlobalAdvantages from '../components/home/GlobalAdvantages.astro'
import CoreTech from '../components/home/CoreTech.astro'
import TradingTools from '../components/home/TradingTools.astro'
import GlobalCompliance from '../components/home/GlobalCompliance.astro'
---

<Layout
  title="VS TRADER - 链接第一抓机遇"
  description="为全球交易者提供先进的科技服务，结合创新技术与专业支持"
>
  <!-- 导航栏 -->
  <Navigation transparent />

  <!-- 英雄区 -->
  <HeroSection />

  <!-- 主要内容 -->
  <main>
    <!-- 产品展示 -->
    <ProductShowcase />

    <!-- 全新体验 -->
    <GlobalAdvantages />

    <!-- 核心技术 -->
    <div class="page-main">
      <CoreTech />
    </div>

    <!-- 交易工具 -->
    <TradingTools />

    <!-- 全球合规 -->
    <GlobalCompliance />
  </main>

  <!-- 页脚 -->
  <Footer />
</Layout>
