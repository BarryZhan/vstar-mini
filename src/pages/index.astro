---
import Layout from '../layouts/Layout.astro'
import Navigation from '../components/Navigation.astro'
import Footer from '../components/Footer.astro'
import HeroSection from '../components/home/HeroSection.astro'
import IntroSection from '../components/home/IntroSection.astro'
import DownloadSection from '../components/home/DownloadSection.astro'
import GlobalAdvantages from '../components/home/GlobalAdvantages.astro'
import UserCentricSection from '../components/home/UserCentricSection.astro'
import BuildingSection from '../components/home/BuildingSection.astro'
import ClosingSection from '../components/home/ClosingSection.astro'
import NewsSection from '../components/home/NewsSection.astro'
---

<Layout
  title="VS TRADER - 链接第一抓机遇"
  description="为全球交易者提供先进的科技服务，结合创新技术与专业支持"
>
  <!-- 导航栏 -->
  <Navigation transparent />

  <!-- 英雄区 -->
  <HeroSection />

  <!-- 主要内容 -->
  <main>
    <!-- VS TRADER 介绍 + 统计数据 -->
    <IntroSection />

    <!-- 下载应用区域 -->
    <DownloadSection />

    <!-- 全新体验 -->
    <GlobalAdvantages />

    <div class="rounded-card bg-black">
      <div class="content-container">
        <!-- 用户为中心 - 解决核心痛点 -->
        <UserCentricSection />

        <!-- See what being built -->
        <BuildingSection />
      </div>
    </div>

    <!-- 底部说明区域 -->
    <ClosingSection />

    <!-- 最新动态 -->
    <NewsSection />
  </main>

  <!-- 页脚 -->
  <Footer />
</Layout>
